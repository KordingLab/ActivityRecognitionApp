<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.northwestern.sohrob.activityrecognition.activityrecognition"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="ActivityRecognition"
        android:theme="@style/AppTheme" >

        <activity
            android:name="edu.northwestern.sohrob.activityrecognition.activityrecognition.ActivityRecognition"
            android:label="ActivityRecognition" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="ActivityRecognitionService"></service>

        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version" />

    </application>

    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION"/>

</manifest>
